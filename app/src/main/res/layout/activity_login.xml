<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/login_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="Id : "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <EditText
        android:id="@+id/login_ed_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/login_tv_id"
        app:layout_constraintBottom_toBottomOf="@id/login_tv_id"
        app:layout_constraintLeft_toLeftOf="@id/login_ed_password"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"
        android:background="@null"/>

    <TextView
        android:id="@+id/login_tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pw : "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/login_tv_id"
        app:layout_constraintTop_toBottomOf="@id/login_tv_id"/>

    <EditText
        android:id="@+id/login_ed_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/login_tv_password"
        app:layout_constraintBottom_toBottomOf="@id/login_tv_password"
        app:layout_constraintLeft_toRightOf="@id/login_tv_password"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"
        android:background="@null"/>

    <ImageView
        android:id="@+id/login_ed_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/login_ed_password"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="@id/login_tv_password"
        app:layout_constraintRight_toRightOf="@id/login_ed_password"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        app:layout_constraintDimensionRatio="1:0.1"/>

</androidx.constraintlayout.widget.ConstraintLayout>